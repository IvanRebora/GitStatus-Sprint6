<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %>

<body>

    <%- include('partials/header') %>
  

    <main>
    <main class="login">

        <div class="titulo-register">INGRESÁ</div>
        <article class="form-container">
            <form action="/login" method="POST" >
                <div class="form-login">
                    <input type="text" name="email" placeholder="Correo electrónico" class="control" id="email">
                    
            <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                  <%= errors.email.msg %> 
                </div>
              <% } %>
                </div>

                <div class="form-login">
                    <input type="password" name="password" placeholder="Contraseña" class="control" id="password">
                </div>
                <div class="olvidasteContra">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <button type="submit" class="boton-login">Enviar</button>
            </form>
        </article>


    </main>
        <%- include('partials/footer') %>
        <script src="/js/validacionLogin.js"></script>
</html>